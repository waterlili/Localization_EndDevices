from apache_beam.typehints.arrow_type_compatibility import Sequence
from apache_beam.runners.direct.direct_runner import K
from apache_beam.typehints.trivial_inference import element_type
from apache_beam import window
from datetime import timedelta

import apache_beam as beam

"""In each network area try to find all the packets"""
class DeviceFrame(beam.DoFn):
   def process1(self, packets):
       k, v = packets
       for elem in list(v):
            yield elem

   def process2(self, devices):
       k, v = devices
       my_list=[]
       count_dev=1


       # Create a set to keep track of the unique frame base on gateway and frame number
       unique_frame_set = set()

       for devices in list(v):
            my_list.append((int(devices[2]),devices[4]))


       for frame in my_list:
           unique_frame_set.add(frame)

       distinct_frame_list = list(unique_frame_set)

       #sort
       distinct_frame_list.sort()
       distinct_frame_list.append(count_dev)
       yield distinct_frame_list

   def process3(self, distinct_frame_list):
       frame_size=65535
       hop_frame_size=65450
       sequence_size=5
       number_of_elements=len(distinct_frame_list)-2
       # compare adjacent frames
       if  number_of_elements>1:
         for i in range(number_of_elements):

               gap_btw_frames=distinct_frame_list[i+1][0]-distinct_frame_list[i][0]
          #Rule1==>if the distance between two frames are less than our expectation then even by different gateway_id
          #we count that frames for a unique device
               if abs(gap_btw_frames)>sequence_size and gap_btw_frames<frame_size:
                  distinct_frame_list[-1] += 1

          #Rule2==>sometimes although the space between two frames pass our expectation but it is still for the same device
          #we check the gateway_id and decide about increament
               elif abs(gap_btw_frames)==hop_frame_size and distinct_frame_list[i][1]!=distinct_frame_list[i+1][1]:
                   distinct_frame_list[-1] += 1

          #Rule3==>if there is a session that frame inside that jump from 0 the last one, gateway_id specify whether this is the same device or not
               elif abs(gap_btw_frames==frame_size):
                    if distinct_frame_list[i][1]!=distinct_frame_list[i+1][1]:
                       distinct_frame_list[-1] += 1
               else:
                   continue

         yield distinct_frame_list





with beam.Pipeline() as pipeline:
  #Packets for specific network id
  packets_per_network = (
    pipeline
    | 'Read packet traffics' >> beam.io.ReadFromText("/content/drive/MyDrive/things/metadata_end_gateway.csv", skip_header_lines=1)
    |  beam.Map(lambda x: x.split(','))
    |  beam.GroupBy(lambda line: line[3])
    | 'Process grouped elements' >> beam.ParDo(DeviceFrame().process1)

  )

  device_frame_combination = (
    packets_per_network
    | 'find specific device' >> beam.GroupBy(lambda l: l[1])
    | 'Process grouped devices' >> beam.ParDo(DeviceFrame().process2)
    #| 'Count devices base on the rules' >> beam.ParDo(DeviceFrame().process3)
    |  beam.Map(print)

  )

